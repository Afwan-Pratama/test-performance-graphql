generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Link {
  id          String   @id @default(uuid())
  index       Int      @default(autoincrement()) @unique
  title       String
  description String
  url         String
  imageUrl    String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  favorites Link[]
  role      Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}